datasource db {
  provider     = "sqlite"
  url          = "file:./dev.db"
  relationMode = "prisma"
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

model Post {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  slug      String   @unique
  likes     Int      @default(0)
  views     Int      @default(0)
}

model Session {
  id        String   @id
  createdAt DateTime @default(now())
  likes     Int      @default(0)
}
